{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "final_space": true,
    "console_title": true,
    "console_title_style": "template",
    "console_title_template": "{{if .Root}}(Admin) {{end}}{{.Folder}}",
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "horizontal_offset": 0,
            "vertical_offset": 0,
            "segments": [
                {
                    "type": "os",
                    "style": "diamond",
                    "leading_diamond": " ",
                    "powerline_symbol": "",
                    "foreground": "#3A86FF",
                    "properties": {
                      "prefix": ""
                    }
                },                
                {
                    "type": "path",
                    "style": "plain",
                    "foreground": "#33DD2D",
                    "properties": {
                        "style": "full",
                        "folder_separator_icon": "/",
                        "enable_hyperlink": true
                    }
                },
                {
                    "type": "git",
                    "style": "plain",
                    "foreground": "#fffb38",
                    "properties": {
                        "display_status": true,
                        "display_stash_count": true,
                        "display_upstream_icon": true
                    }
                },
                {
                    "type": "dotnet",
                    "style": "plain",
                    "foreground": "#0184bc",
                    "properties": {
                        "prefix": " \uE77F "
                    }
                },
                {
                    "type": "node",
                    "style": "plain",
                    "foreground": "#6CA35E",
                    "properties": {
                        "prefix": " \uE718 "
                    }
                },
                {
                    "type": "executiontime",
                    "style": "plain",
                    "foreground": "#b55aee",
                    "properties": {
                        "threshold": 10,
                        "style": "austin",
                        "prefix": " <#fefefe>\ufbab</> "
                    }
                },
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#D75F00",
                    "properties": {
                      "text": "Î»",
                      "prefix": "",
                      "postfix": ""
                    }
                }
            ]
        }
    ]
}